<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomTextAppearance.Big">
        <item name="android:textSize">@dimen/custom_text_size_big</item>
    </style>

    <style name="CustomTextAppearance.Small">
        <item name="android:textSize">@dimen/custom_text_size_small</item>
    </style>

    <style name="CustomTextAppearance.White">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>