<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/navigation_item_padding">
    <ImageView
            android:id="@+id/navigationItemIcon"
            android:layout_width="@dimen/navigation_item_icon_width"
            android:layout_height="@dimen/navigation_item_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/navigation_item_icon_margin_right"/>
    <TextView
            style="@style/CustomTextAppearance.White"
            android:id="@+id/navigationItemTitle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/navigationItemIcon"/>

</RelativeLayout>